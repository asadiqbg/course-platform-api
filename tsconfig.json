{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
     "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": [
    "src/types/global.d.ts",
    "./src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}